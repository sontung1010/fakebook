<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :post, label: "Post a status", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "How do you feel today..." %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>

